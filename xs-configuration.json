{
  "format": {
    "type": "config",
    "version": "0.1.0"
  },
  "processors": {
    "ts_injector": {
      "description": "Injects source code location to tsconfig.json file",
      "triggers": [
        {
          "type": "post",
          "sections": [
            "frontends"
          ],
          "command": [
            "code",
            "add"
          ]
        }
      ]
    }
  },
  "builders": {
    "front": [
      "frontends/endpoints"
    ],
    "module": [
      "frontends/modules"
    ],
    "frontlib": [
      "frontends/packages"
    ],
    "helm": [
      "backends/deployments"
    ],
    "library": [
      "backends/lib"
    ],
    "container": [
      "backends/modules"
    ]
  }
}